<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvNewsTitle"
        android:textSize="18sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/ivDeleteNews"
        android:layout_toStartOf="@+id/ivDeleteNews" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvNewsDate"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/news_list_item_line_spacing"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/tvNewsTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvSource"
        android:textColor="@android:color/darker_gray"
        android:textSize="12sp"
        android:layout_alignTop="@+id/tvNewsDate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/ivDeleteNews"
        android:src="@mipmap/ic_delete_news"
        android:background="@drawable/image_view_selector"
        android:onClick="onDeleteNews"
        android:focusable="false"
        android:clickable="true"
        android:layout_alignTop="@+id/tvNewsTitle"
        android:layout_alignParentRight="true" />

</RelativeLayout>